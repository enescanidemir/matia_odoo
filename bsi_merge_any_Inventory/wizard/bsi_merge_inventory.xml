<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="bsi_merge_inventory_action" model="ir.ui.view">
			<field name="name">Merge Inventory</field>
			<field name="model">bsi.merge.inventory</field>
			<field name="arch" type="xml">
				<form string="Inventory">
				<sheet>
					<group>
						<group>
							<field name="contact" />
							<field name="operation_type"/>
							<field name="scheduled_date"/>
							<field name="stock_move"  widget="many2many_tags" invisible="1" />
						</group>
						<group>
							<field name="source_location" />
							<field name="destination_location" />
						</group>
					</group>
					<footer>
						<button name="merge_inventory" string="Merge Inventory" type="object" class="btn btn-primary" />

						<button name="merge_andnew" string="Merge and New" type="object"  class="btn btn-primary" id="create_wizard_open" context="{'open_wizard': True}" />

						<button name="merge_andview" string="Merge and View" type="object" class="btn btn-primary" />

						<button string="Cancel" type="object" class="btn btn-secondary" special="cancel"/>
					</footer>
				</sheet>
				</form>
			</field>
		</record>	

		<record id="action_bsi_merge_inventory" model="ir.actions.act_window">
	        <field name="name"> Merge Inventory</field>
	        <field name="type">ir.actions.act_window</field>
	        <field name="res_model">bsi.merge.inventory</field>
	        <field name="view_mode">form</field>
	        <field name="view_id" ref="bsi_merge_inventory_action"/>
	        <field name="target">new</field>
	        <field name="binding_model_id" ref="stock.model_stock_picking" />
		</record>
	</data>
</odoo>